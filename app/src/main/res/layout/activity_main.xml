<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/colorBlack"
        tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_qrcode"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="138dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_load_balance"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/image_qrcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/text_valor_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" - - "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_qrcode"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:layout_marginBottom="64dp"
        android:textColor="@color/colorBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
            android:id="@+id/button_pagar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_rounded_button_blue"
        android:text="Pagar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>